generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ArcadiaGame {
  id       Int     @id @default(autoincrement())
  name     String
  genre    String
  platform String
  img      String
  alt      String
  url      String
  status   Boolean
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  role      String
  password  String
  createdAt DateTime @default(now())
}
